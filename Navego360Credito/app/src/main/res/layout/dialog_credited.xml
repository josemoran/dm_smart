<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="286dp"
    android:layout_height="240dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/close_btn"
            android:src="@drawable/ic_close"
            android:layout_marginTop="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:src="@drawable/check_img"
        android:background="@drawable/check_drawable"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credit_approved"
        android:textColor="@color/textColor1"
        android:textSize="@dimen/dimen20"
        android:textStyle="bold"
        android:layout_marginTop="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credit_approved_message"
        android:textColor="@color/textColorAlert"
        android:textAlignment="center"
        android:textSize="@dimen/dimen16"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"/>

</LinearLayout>